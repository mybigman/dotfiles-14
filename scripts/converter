for i in *.[mM][4][aA];
  do name=`echo $i | cut -d'.' -f1`;
  echo $name;
  ffmpeg -i "$i" -acodec libmp3lame -vn -n "${name}.mp3";
done
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo "Acesse nosso grupo do Telegram:"
echo "https://t.me/winehq_linux"
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
